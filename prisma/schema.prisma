generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  hashedPassword String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
model Apartment {
  id          Int      @id @default(autoincrement())
  name        String
  minPrice    Float
  maxprice    Float
  rentalType  String
  starRating  Int
  propertyType String
  images      String[] // Use PostgreSQL array type
  phoneNumber String
  email       String
  address     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}